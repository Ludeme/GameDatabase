(define "ToCenter"
    (and
        (not (is In (to) (sites Top)))
        (not (is In (to) (sites Bottom)))
    )
)

//-------------------------------------------------------------------------

(game "Bison"
    (players 2)
    (equipment {
        (board (rectangle 7 11))
        (piece "Bull" P1
            ("StepForwardToEmpty")
        )
        (piece "Colonel" P2
            (move Step Adjacent
                (to if:
                    (and
                        "ToCenter"
                        (not (is Friend (who at:(to))))
                    )
                    (apply
                        (if (is Enemy (who at:(to)))
                            (remove (to))
                        )
                    )
                )
            )
        )
        (piece "Dog" P2
            (move Slide
                (between if:
                    (and
                        "ToCenter"
                        (is Empty (to))
                    )
                )
            )
        )
    })
    (rules
        (start {
            (place "Bull1" (sites Bottom))
            (place "Colonel2" {"F6"})
            (place "Dog2" {"D6" "E6" "G6" "H6"})
        })
        (play
            (forEach Piece)
        )
        (end {
            (if
                (is In (last To) (sites Top))
                (result P1 Win)
            )
            (if (no Moves Next) (result Mover Win))
        })
    )
)

