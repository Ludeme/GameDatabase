(game "A Simple Game"
    (players 2)
    (equipment {
        (board (square 4) use:Vertex)
        (piece "Ball" Each (move Step Orthogonal (to if:(is Empty (to)))))
        (hand Each)
    })
    (rules
        (start {
            (place "Ball1" (intersection (sites Phase 0) (union (sites Top) (sites Bottom))))
            (place "Ball2" (intersection (sites Phase 1) (union (sites Top) (sites Bottom))))
        })
        (play (forEach Piece))
        (end (if (is Line 3 All) (result Mover Win)))
    )
)

